<!--pages/home/home.wxml-->
<!-- 1.展示轮播图 -->
<w-swiper list="{{banners}}"></w-swiper>

<!-- 2.推荐数据展示 -->
<w-recommend recommends="{{recommends}}" bind:imageload="hanledImageLode"></w-recommend>

<!-- 3.展示本周流行 -->
<w-popular/>

<!-- 4.tab-control -->
<w-tab-control class="{{isTabFixed?'fixed':''}}" titles="{{titles}}" bind:tabclick="handletabclick" id="tab-control"/>
<!-- 占位 -->
<w-tab-control  titles="{{titles}}" wx:if="{{isTabFixed}}"/>
<!-- 5.展示商品数据 -->
<w-goods goods="{{goods[currentType].list}}"></w-goods>

<!-- 6.返回顶部 -->
<w-back wx:if="{{showBackTop}}"></w-back>